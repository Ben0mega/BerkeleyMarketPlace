<% posts.each do |post_info| %>
  <div class="col-lg-3 col-md-3 mb-3">
    <div class="card h-100">
      <%= link_to image_tag("http://via.placeholder.com/300x300", class: "card-img-top"), "posts/%d" % post_info.id %>
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to post_info.title, "posts/%d" % post_info.id %>
        </h5>
        <h5>USD $<%= post_info.price %></h5>
        <p class="card-text"><%= post_info.category %> / <%= post_info.subcategory %>
        <% if post_info.expire_time %>
        <br>
        Valid until: <%= post_info.expire_time.strftime("%Y/%m/%d %T") %>
        <% end %>
        </p>
      </div>
    </div>
  </div>
<% end %>