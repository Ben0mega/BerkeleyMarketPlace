<!DOCTYPE html>
<html>
<head>
  <title>Berkeley MarketPlace</title>
  
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  
  <% if current_user && current_user.superuser? %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.17/d3.min.js"></script>
    <script src="https://cdn.rawgit.com/mcaule/d3-timeseries/839468ac/src/d3_timeseries.js"></script>
    <script src="https://cdn.rawgit.com/benkeen/d3pie/0.1.9/d3pie/d3pie.min.js"></script>
  <% end %>
  
  <%= csrf_meta_tags %>
  <meta charset="UTF-8">
  <meta name=viewport content="width=device-width, initial-scale=1">
</head>
<body>
  
  <% if current_user %>  
  
  <%= render "layouts/header" %>
  
  <div class="container" id="content">
    
    <% if flash[:notice] %>
      <div class="row" id="flash">
  	   <div class="col s12 m12 l12 center">
          <h5><%= flash[:notice] %></h5>
  	   </div>
      </div>
    <% end %>
    
    <% if flash[:alert] %>
      <div class="row" id="flash">
  	   <div class="col s12 m12 l12 center">
          <h5><%= flash[:alert] %></h5>
  	   </div>
      </div>
    <% end %>
    
    <%= yield %>
  </div>
  <%= render "layouts/footer" %>
  
  <% else %> 
    <%= render "layouts/login" %>
  <% end %> 

</body>
</html>
