<%= form_for :post, :method => :post, :html => { :multipart => true} do |f|%>
  <div>
    <%= f.label :image%>
    <%= f.file_field :image, id: "Image"%>
  </div>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
 
  <div>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>
 
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  
  <div>
    <%= f.label :category %> 
    <%= f.select :category, [['Item','item'],['Event','event'],
        ['Job','job']], id: "Category" %>
  </div>
  
  <div>
    <%= f.label :subcategory %> 
    <%= f.select :subcategory, [['Book','book'],['Electronics','electronics'],
        ['Info Session','info session'],['Performance','performance'],
        ['Research Assistant','research assistant'],['Tutor','tutor']], id: "Subcategory" %>
  </div>
 
   <div>
    <%= f.label :Email %> 
    <%= f.text_field :author_id, id: "Email", value: "test@email.com", readonly: true%>
  </div>
  
  <%= f.submit %>
<% end %>



