<div class="row">
    <% posts.each do |post_info| %>
      <div class="col-lg-3 col-md-3 mb-1">
        <div class="card h-100">
          <%= link_to ("posts/%d" % post_info.id)  do %>
            <%= image_tag safe_url(post_info.image.url(:thumb)), class:"card-img-top" %>
          <% end %>
          <div class="card-body">
            <h5>$<%= post_info.price %></h5>
            <h4 class="card-title">
              <%= link_to post_info.short_title, "posts/%d" % post_info.id %>
            </h4>
            
          </div>
        </div>
      </div>
    <% end %>
</div>
