                  <% if post_info.expire_time %>
                  <br>
                  Valid until: <%= post_info.expire_time.strftime("%Y/%m/%d %T") %>
                  <% end %>
                  </p>
                </div>
              </div>
            </div>
            <% end %>
          </div>
          <!-- /.row -->
          
          <h3>Awesome Events</h3>
          <div class="row">
            <% @event_posts.each do |post_info| %>
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card h-100">
                <a href="#"><img class="card-img-top" src="http://placehold.it/400x400" alt=""></a>
