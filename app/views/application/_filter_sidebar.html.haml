
#filterSidebar
  = form_for_filterrific @filterrific do |f|
    .row
      .col-md-12
        .form-group.chardin_box{ :'data-position' => 'top', :'data-intro' => 'Change the sorting.' }
          %label Sorted by
          = f.select :sorted_by,
                      @filterrific.select_options[:sorted_by],
                      {},
                      { :class => "form-control" }
      .col-md-12
        .form-group.chardin_box{ :'data-position' => 'top', :'data-intro' => 'Change the sorting.' }
          %label Choose category
          = f.select :choose_category,
                      @filterrific.select_options[:choose_category],
                      {},
                      { :class => "form-control" }
                  